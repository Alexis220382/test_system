<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.ivanovskiy.entity.TestsEntity" table="tests" schema="" catalog="test_db">
        <id name="id">
            <column name="id" sql-type="int" not-null="true"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar"/>
        </property>
        <property name="dateFrom">
            <column name="date_from" sql-type="varchar" not-null="true"/>
        </property>
        <property name="dateTo">
            <column name="date_to" sql-type="varchar" not-null="true"/>
        </property>
        <set name="questions" lazy="false" cascade="save-update" table="testquestions">
            <key column="id_tests"/>
            <many-to-many column="id_questions" lazy="false" class="com.ivanovskiy.entity.QuestionsEntity"/>
        </set>
        <set name="results" cascade="all">
            <key column="id_test"/>
            <one-to-many class="com.ivanovskiy.entity.ResultEntity"/>
        </set>
    </class>
</hibernate-mapping>